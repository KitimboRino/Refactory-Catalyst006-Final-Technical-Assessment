meta(charset="utf-8")
meta(name="viewport", content="width=device-width,initial-scale=1,shrink-to-fit=no")

 
link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css", integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2", crossorigin="anonymous")
title Registration Form

.py-5.d-block.mx-auto.text-center
  .container
    h2 Ministry of Health
    h1 COVID-19 (CORONA VIRUS)

.container
  form( name='regForm' action='/form' method='POST' onsubmit='return Validate()')
    
    h4 Virus-Test Registration Form
      .row.g-3
        .col-sm-6
          label.form-label(for="Surname") Surname
          input.form-control(type="text" name='surName')
          #sName.text-danger.font-weight-bold.small

        .col-sm-6
          label.form-label(for="givenName") Given Name
          input.form-control(type="text" name='givenName')
          #gName.text-danger.font-weight-bold.small


        .col-md-6
          label.form-label(for="dateOfBirth") Date of Birth
          input.form-control(type="date" name='dateOfBirth')
          #db.text-danger.font-weight-bold.small

        .col-md-6
          label.form-label(for="Place of residence") Place of Residence
          input.form-control(type="text" name='placeOfResidence')
          #pR.text-danger.font-weight-bold.small

        .col-sm-6
          label.form-label(for="occupation") Occupation
          input.form-control(type="text" name='occupation')
          #occup.text-danger.font-weight-bold.small

        .col-sm-6
          label.form-label(for="nationality") Nationality
          input.form-control(type="text" name='nationality')
          #Nat.text-danger.font-weight-bold.small

        .col-md-8
          label.form-label(for="category") Category
          select.form-control(name='category')
            option(value="Category" selected='' disabled) -- Select Category --
            option(value="Returnee") Returnee
            option(value="Contact") Contact
            option(value="Alert") Alert
            option(value="Volunteer") Volunteer
          #cnt.text-danger.font-weight-bold.small
    
    .my-4
        .form-check
        input#male.form-check-input(type='radio')
        label(for='Male') Male
        .form-check
        input#paypal.form-check-input(type='radio')
        label(for='Female') Female

        button.btn.btn-primary.btn-m Register
script(src='js/formvalid.js')


